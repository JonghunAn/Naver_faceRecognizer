<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    android:gravity="center"
    tools:context=".faceRecognition">

    <ImageView
        android:id="@+id/img_other"

        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비교할 사진"/>
    <ImageView
        android:id="@+id/img_me"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 사진"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/otherFaceCount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="비교할 대상 정보"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/meFaceCount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="나의 정보"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/analysis_result"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="분석 결과값"/>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2"
    >
    <Button
        android:id="@+id/reselect_otherImg_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="사진선택화면 돌아가기"/>
        <Button
            android:id="@+id/detail_compare_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="비교하기"/>
    </LinearLayout>
</LinearLayout>